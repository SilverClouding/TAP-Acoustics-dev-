{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  margin-left: {{ section.settings.margin_left }}px;
  margin-right: {{ section.settings.margin_right }}px;
}
.section-{{ section.id }}-padding.page-width {
  margin:0 auto;
}
.group3-img-section .grid__item .group-3-right-top,
.group3-img-section .grid__item .group3-con{
  position:relative;
}
.group3-img-section .grid__item .group-3-right-top:after,
.group3-img-section .grid__item .group3-con:after{
position:absolute;
content:'';
left:0;
width:100%;
height:100%;
background:rgba(17, 17, 17, 0.2);
}
.group3-img-section .grid__item .group-3-right-top{
  height:100%;
}
.group3-img-section .grid__item .group3-img-txt{
  position:absolute;
  bottom:37px;
  left:43px;
  z-index:1;
  padding-right:20px;
}
.group3-img-section .grid__item img{
  width:100%;
  height:100%;
} 
.group3-img-section .group3-con{
  height:100%;
}
.group3-img-section .group-3-header{
  font-size:40px;
  font-weight:600;
  text-transform:uppercase;
  color:#fff;
}
.group3-img-section .group-3-subtext{
  font-size:22px;
  font-weight:300;
  color:#fff;
  line-height:28px;
}
.group3-img-section .grid__item.first-col{
  grid-column: 1 / span 2;
  grid-row: span 2;
  width: 100%;
max-width:100%;
position:relative;
}
.group3-img-section .grid__item.second-col,
.group3-img-section .grid__item.third-col{
  grid-column-start: 3;
  width: 100%;
  max-width:100%;
}
.group3-img-section.grid {
  display: grid;
  grid-gap: 30px;
}

@media(max-width:992px){
.group3-img-section .grid__item.first-col,
.group3-img-section .grid__item.second-col,
.group3-img-section .grid__item.third-col{
    grid-column: 1;
    grid-row: unset;
}
.group3-img-section .group-3-header{
font-size:22px;
}
.group3-img-section .grid__item .group3-img-txt{
bottom:20px;
left:20px;
}
.section-{{ section.id }}-padding {
 margin-left: 20px;
  margin-right: 20px;
}
.group3-img-section .group-3-subtext{
font-size:16px;
line-height:22px;
}
}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}






<div  class="isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">

<div class="group3-img-section grid">
  <div class="grid__item first-col">
    <div class="group3-con">
  {%- if section.settings.img1 != blank -%}
          <img
            srcset="{%- if section.settings.img1.width >= 165 -%}{{ section.settings.img1 | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if section.settings.img1.width >= 360 -%}{{ section.settings.img1 | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if section.settings.img1.width >= 535 -%}{{ section.settings.img1 | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if section.settings.img1.width >= 750 -%}{{ section.settings.img1 | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.img1.width >= 1070 -%}{{ section.settings.img1 | image_url: width: 1070 }} 1070w,{%- endif -%}
              {%- if section.settings.img1.width >= 1500 -%}{{ section.settings.img1 | image_url: width: 1500 }} 1500w,{%- endif -%}
              {{ section.settings.img1 | image_url }} {{ section.settings.img1.width }}w"
            src="{{ section.settings.img1 | image_url: width: 1500 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.img1.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.img1.width }}"
            height="{{ section.settings.img1.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
    </div>
    <div class="group3-img-txt">
    {% if section.settings.head1 != blank %}
    <h2 class="group-3-header">{{section.settings.head1}} </h2>
      {% endif %}
      {% if section.settings.paragraph1 != blank %}
    <div class="group-3-subtext">{{section.settings.paragraph1}}</div>
      {% endif %}
    
    </div>
  </div>
  
  <div class="grid__item second-col">
    <div class="group-3-right-top">

      {%- if section.settings.img2 != blank -%}
          <img
            srcset="{%- if section.settings.img2.width >= 165 -%}{{ section.settings.img2 | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if section.settings.img2.width >= 360 -%}{{ section.settings.img2 | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if section.settings.img2.width >= 535 -%}{{ section.settings.img2 | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if section.settings.img2.width >= 750 -%}{{ section.settings.img2 | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.img2.width >= 1070 -%}{{ section.settings.img2 | image_url: width: 1070 }} 1070w,{%- endif -%}
              {%- if section.settings.img2.width >= 1500 -%}{{ section.settings.img2 | image_url: width: 1500 }} 1500w,{%- endif -%}
              {{ section.settings.img2 | image_url }} {{ section.settings.img2.width }}w"
            src="{{ section.settings.img2 | image_url: width: 1500 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.img2.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.img2.width }}"
            height="{{ section.settings.img2.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      <div class="group3-img-txt">
    
    <h2 class="group-3-header">{{section.settings.head2}} </h2>
    <div class="group-3-subtext">{{section.settings.paragraph2}}</div>
    
    </div>
    </div>
  </div>
  <div class="grid__item third-col">
  	<div class="group-3-right-top group-3-right-bottom">
    {%- if section.settings.img3 != blank -%}
          <img
            srcset="{%- if section.settings.img3.width >= 165 -%}{{ section.settings.img3 | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if section.settings.img3.width >= 360 -%}{{ section.settings.img3 | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if section.settings.img3.width >= 535 -%}{{ section.settings.img3 | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if section.settings.img3.width >= 750 -%}{{ section.settings.img3 | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.img3.width >= 1070 -%}{{ section.settings.img3 | image_url: width: 1070 }} 1070w,{%- endif -%}
              {%- if section.settings.img3.width >= 1500 -%}{{ section.settings.img3 | image_url: width: 1500 }} 1500w,{%- endif -%}
              {{ section.settings.img3 | image_url }} {{ section.settings.img3.width }}w"
            src="{{ section.settings.img3 | image_url: width: 1500 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.img3.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.img3.width }}"
            height="{{ section.settings.img3.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      <div class="group3-img-txt">
    
    <h2 class="group-3-header">{{section.settings.head3}} </h2>
    <div class="group-3-subtext">{{section.settings.paragraph3}}</div>
    
    </div>
    </div>
  </div>
  
  

</div>

</div>




