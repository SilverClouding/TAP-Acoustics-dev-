{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .section-{{ section.id }}-padding .section-bg{
    padding-top: {{ section.settings.inner_padding_top }}px;
    padding-bottom: {{ section.settings.inner_padding_bottom }}px;
    background-image:url({{section.settings.texture_img|img_url:'original'}});
    background-repeat:no-repeat;
    background-size: cover;
    padding-left:75px;
    padding-right:75px;
    position:relative;
  }
  .section-{{ section.id }}-padding .section-bg:before{
    position:absolute;
    left:0;
    top:0;
    z-index:1;
    content:'';
    width:100%;
    height:100%;
    background-color:{{ section.settings.bg_color }};
    opacity:0.5;
  }
  .section-{{ section.id }}-padding .bg-inner-text{
    font-size:{{ section.settings.font_size }}px;
    color:{{ section.settings.text_color }};
    text-transform:uppercase;
    line-height:40px;
    font-weight:600;
    position: relative;
    z-index: 9;
  } 
  .section-{{ section.id }}-padding .text-align-left{
    text-align:left;
  }
  .section-{{ section.id }}-padding .text-align-right{
    text-align:right;
  }
  .section-{{ section.id }}-padding .text-align-center{
    text-align:center;
  }
  .section-{{ section.id }}-padding .banner__buttons.link-btn{
  position:relative;
    z-index:9;
  }
  .section-{{ section.id }}-padding .banner__buttons.link-btn a{
  opacity:1;
  }
  @media(max-width:992px){
  .section-{{ section.id }}-padding .section-bg{
padding:40px 20px;
}
    .section-{{ section.id }}-padding .bg-inner-text{
   font-size:26px;
   line-height:30px;   
    }
  }
  
</style>


<style>

</style>

<div  class="isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
{% if section.settings.bg_color %}
  <div class="section-bg text-align-{{ section.settings.text_alignment }}">  
  {% if section.settings.text != blank %}  
    <div class="bg-inner-text">{{section.settings.text}}</div>
    {% endif %}
    {% if section.settings.button_label_1 or button_label_2 != blank %}
    <div class="banner__buttons{% if section.settings.button_label_1 != blank and section.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %} link-btn" {{ section.shopify_attributes }}>
              {%- if section.settings.button_label_1 != blank -%}
              <a{% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_1 }}"{% endif %} class="button{% if section.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"><span>{{ section.settings.button_label_1 | escape }}</span></a>
              {%- endif -%}
      
              {%- if section.settings.button_label_2 != blank -%}
                <a{% if section.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_2 }}"{% endif %} class="button{% if section.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">{{ section.settings.button_label_2 | escape }}</a>
              {%- endif -%}
{%- endif -%}
            </div>
  </div>
  {% endif %}
  
</div>




