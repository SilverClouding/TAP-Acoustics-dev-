          "label": "Image Heading"
        },
		{
          "type": "text",
          "id": "font_size",
          "label": "Heading Size"
        },
		{
          "type": "color",
          "id": "head_color",
          "label": "Heading Color"
        },
		{
          "type": "select",
          "id": "text_transform",
          "options": [
            {
              "value": "capitalize",
              "label": "Capitalize"
            },
            {
              "value": "uppercase",
              "label": "Uppercase"
            }
          ],
          "default": "capitalize",
          "label": "Capitalize"
    	},
		{
          "type": "select",
          "id": "font_weight",
          "options": [
            {
              "value": "400",
              "label": "Normal"
            },
            {
              "value": "600",
              "label": "Bold"
            }
          ],
          "default": "400",
