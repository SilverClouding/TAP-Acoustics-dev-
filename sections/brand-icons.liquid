{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
.section-{{ section.id }}-padding .brand-icons-section{
    border-top: 3px solid #000;
    margin: 0 30px;
    padding-top: 105px;
}
.brand-icons-section .brand-icons{
margin-top:50px;
}
.brand-icons-section .brand-icons .icon-list{
flex-wrap:wrap;
}
.brand-icons-section .brand-icons .icon-list .icon {
    width: calc(20% - 10px);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 70px;
}
.brand-icons-section .brand-title{font-size:20px; font-weight:600; letter-spacing:3px; text-transform:uppercase;}
@media(max-width:992px){
    .section-{{ section.id }}-padding .brand-icons-section{
      border-top: 2px solid #000;
      margin: 0 20px;
      padding-top: 30px;
    }
    .section-{{ section.id }}-padding {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    }
    @media(max-width:767px){
    .brand-icons-section .brand-icons .icon-list .icon {
      width: calc(50% - 20px);
      margin-bottom: 30px;
      padding:0 10px;
    }
    .brand-icons-section .brand-icons .icon-list .icon img{
      width:100%;
    }
}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}




<style>
  .brand-title{
  text-transform: uppercase;
    text-align: center;}
  .icon-list{
      list-style: none;
    display: flex;
    justify-content: space-around;
  }
</style>

<div  class="isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">

<div class="brand-icons-section">
 
  <h3 class="brand-title">{{section.settings.title}}</h3>
  
  <div class="brand-icons">
  <ul class="icon-list">
  {%for block in section.blocks%}
    <li class="icon"> <img src="{{block.settings.image |img_url:'original'}}"/></li>
    {%endfor%}
    </ul>
  </div>
  
 
</div>

</div>




{% schema %} 
{
"name": "Brand Icons",
"settings": [
 {
  "type": "text",
  "id": "title",
  "label": "Section Heading"
},
{
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.video.settings.full_width.label",
      "default": false
    },
{
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }


  ],

 "blocks": [
     {
       "name": "icon",
       "type": "icon",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Select Image"
         }
       ]
     }
   ],

"presets": [
{
"name": "Brand Icons",
"category": "Custom Layout"
}
]
}
{% endschema %}
